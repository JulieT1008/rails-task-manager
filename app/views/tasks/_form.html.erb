<%= form_with model:task do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :details %>
  <%= form.text_field :details %>
  <% if task.new_record? %>
  <% else %>
  <%= form.label :completed, "Completed?" %>
  <%= form.check_box :completed %>
  <% end %>
    <%= form.submit %>
<% end %>
